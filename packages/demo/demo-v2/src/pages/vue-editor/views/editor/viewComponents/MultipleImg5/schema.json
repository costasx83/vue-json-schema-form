{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "ImgItem": {
            "title": "Image Configuration",
            "type": "object",
            "properties": {
                "imgUrl": {
                    "type": "string",
                    "format": "uri"
                },
                "imgLink": {
                    "type": "string",
                    "format": "uri",
                    "default": "https://www.jd.com/"
                }
            },
            "required": [
                "imgUrl",
                "imgLink"
            ]
        }
    },
    "properties": {
        "imgList": {
            "title": "Configure Multi-Image Module",
            "description": "Images displayed in a row, maximum 5 images",
            "type": "array",
            "minItems": 1,
            "maxItems": 5,
            "ui:options": {
                "showIndexNumber": true
            },
            "items": {
                "$ref": "#/definitions/ImgItem"
            }
        }
    }
}
